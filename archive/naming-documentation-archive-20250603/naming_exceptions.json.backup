{
  "description": "Configuration file defining exceptions to kebab-case naming conventions",
  "version": "1.0.0",
  "exceptions": {
    "directories": [
      "node_modules",
      ".git",
      ".github",
      ".obsidian",
      ".space",
      "__pycache__",
      "archive",
      "old-reports-20250531",
      "legacy-root-content-20250602",
      "scripts",
      "templates",
      "standards",
      "test-environment"
    ],
    "files": [
      "LICENSE",
      "README.md",
      "CHANGELOG.md",
      "CONTRIBUTING.md",
      ".gitignore",
      ".gitattributes",
      ".cursorignore",
      "package.json",
      "requirements.txt"
    ],
    "file_patterns": [
      "*.min.js",
      "*.min.css",
      "*.bundle.*",
      ".*",
      "final_cleanup_verification.md",
      "linter_report_*.md",
      "remaining-tasks.md",
      "test_linter_fix.md",
      "test-todos*.json",
      "todos.json"
    ],
    "directory_rules": {
      "snake_case_directories": [
        "tools",
        "scripts", 
        "master-knowledge-base/tools"
      ],
      "kebab_case_directories": [
        "active-project"
      ]
    },
    "standard_ids": {
      "enabled": true,
      "description": "Standard IDs use {DOMAIN}-{SUBDOMAIN}-{NAME} format with UPPERCASE components"
    },
    "script_variables": {
      "python": "snake_case",
      "javascript": "camelCase",
      "description": "Internal variables in scripts follow language conventions"
    },
    "frontmatter_fields": {
      "format": "hyphen-separated-lowercase",
      "examples": ["date-created", "date-modified", "standard-id", "primary-domain"],
      "description": "Frontmatter field names use hyphen-separated lowercase"
    },
    "technical_identifiers": {
      "git_branches": "follow_git_conventions",
      "environment_variables": "UPPER_SNAKE_CASE",
      "json_yaml_keys": "format_specific_conventions"
    }
  },
  "validation": {
    "check_against_kebab_case": true,
    "report_violations": true,
    "auto_fix_extensions": true
  }
} 