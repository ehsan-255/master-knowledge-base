{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["manifest_version", "name", "entrypoint"],
  "properties": {
    "manifest_version": {
      "type": "string",
      "pattern": "^2\\.2(\\.\\d+)?$",
      "description": "Manifest schema version - must be 2.2 for HMA v2.2 compliance"
    },
    "name": {"type": "string", "minLength": 1},
    "entrypoint": {"type": "string", "minLength": 1}
  },
  "additionalProperties": false
}