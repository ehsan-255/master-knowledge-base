{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Standards Index Schema",
  "description": "Defines the structure for standards_index.json, which lists all atomic standards and their key metadata.",
  "type": "object",
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the index schema itself."
    },
    "generatedDate": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 date-time when the index was generated."
    },
    "standards": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "standard_id": { "type": "string", "pattern": "^[A-Z]{2}-[A-Z]{2,6}-[A-Z0-9\\-]+$" },
          "title": { "type": "string" },
          "primary_domain": { "type": "string", "pattern": "^[A-Z]{2}$" },
          "sub_domain": { "type": "string", "pattern": "^[A-Z]{2,6}$" },
          "info-type": { "type": "string" },
          "version": { "type": "string" },
          "status": { "type": "string" },
          "filepath": { "type": "string" },
          "date-modified": { "type": "string", "format": "date-time" }
        },
        "required": [
          "standard_id", "title", "primary_domain", "sub_domain", 
          "info-type", "version", "status", "filepath", "date-modified"
        ]
      }
    }
  },
  "required": ["schemaVersion", "generatedDate", "standards"]
}
